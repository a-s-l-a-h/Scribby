<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScribbyApp.Views.ChatLLMPage"
             Title="Chat LLM">
    <ContentPage.Resources>
        <!-- Style for the border containing the code block -->
        <Style x:Key="CodeBlockStyle" TargetType="Border">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BackgroundColor" Value="#2E2E2E"/>
            <Setter Property="Stroke" Value="Gray"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="8"/>
            </Setter>
        </Style>

        <!-- Style for the read-only Editor used to display code -->
        <Style x:Key="CodeEditorStyle" TargetType="Editor">
            <Setter Property="FontFamily" Value="monospace"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoSize" Value="TextChanges"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- NEW: Style for the Copy button inside a code block -->
        <Style x:Key="CodeBlockCopyStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#4A4A4A"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Text" Value="Copy to Input"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HeightRequest" Value="30"/>
        </Style>

        <!-- Style for the Run button inside a code block -->
        <Style x:Key="CodeBlockRunStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="MediumPurple"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Text" Value="Run Script"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HeightRequest" Value="30"/>
        </Style>

        <!-- Style for the Abort button inside a code block -->
        <Style x:Key="CodeBlockAbortStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="IndianRed"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="Text" Value="Abort Script"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HeightRequest" Value="30"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, *, Auto, Auto" Padding="10" RowSpacing="10">
        <Label Grid.Row="0" Text="Scribby AI Assistant" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" />
        <Button Grid.Row="1" x:Name="InitializeButton" Text="Load LLM Model Initialize" Clicked="InitializeLlmButton_Clicked" />
        <ScrollView Grid.Row="2" x:Name="ChatScrollView">
            <VerticalStackLayout x:Name="ChatHistoryLayout" Spacing="10"/>
        </ScrollView>
        <Grid Grid.Row="3" ColumnDefinitions="*, Auto" ColumnSpacing="5">
            <Entry x:Name="ChatInputEntry" Placeholder="Tell me what you want the robot to do..." Completed="SendButton_Clicked" IsEnabled="False"/>
            <Button x:Name="SendButton" Grid.Column="1" Text="Send" Clicked="SendButton_Clicked" IsEnabled="False"/>
        </Grid>
        <VerticalStackLayout Grid.Row="4" Spacing="5" Margin="0,5,0,0">
            <Button x:Name="StopGenerationButton" Text="Stop Generation" Clicked="StopGenerationButton_Clicked" IsEnabled="False" BackgroundColor="OrangeRed"/>
            <Button x:Name="DeinitializeButton" Text="De-initialize  Clear Chat" Clicked="DeinitializeButton_Clicked" IsEnabled="False" BackgroundColor="LightSlateGray"/>
            <Label x:Name="StatusLabel" Text="Status: Not initialized." FontSize="Small"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>