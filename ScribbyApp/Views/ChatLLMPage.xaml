<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScribbyApp.Views.ChatLLMPage"
             Title="Chat LLM">
    <Grid RowDefinitions="Auto, Auto, *, Auto, Auto" Padding="10" RowSpacing="10">

        <Label Grid.Row="0"
               Text="LLM Chat"
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Grid.Row="1"
                x:Name="InitializeButton"
                Text="Load LLM Model  Initialize"
                Clicked="InitializeLlmButton_Clicked"
                HorizontalOptions="FillAndExpand"/>

        <ScrollView Grid.Row="2" x:Name="ChatScrollView">
            <Editor x:Name="ChatOutputEditor"
                    IsReadOnly="True"
                    AutoSize="TextChanges"
                    VerticalOptions="FillAndExpand"
                    Placeholder="Chat history will appear here..."
                    HeightRequest="300"/>
        </ScrollView>

        <Grid Grid.Row="3" ColumnDefinitions="*, Auto" ColumnSpacing="5">
            <Entry x:Name="ChatInputEntry"
                   Placeholder="Enter your message..."
                   Completed="SendButton_Clicked" 
                   IsEnabled="False"/>
            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Text="Send"
                    Clicked="SendButton_Clicked"
                    IsEnabled="False"/>
        </Grid>

        <VerticalStackLayout Grid.Row="4" Spacing="5" Margin="0,5,0,0">
            <Button x:Name="StopButton"
                    Text="Stop Generation"
                    Clicked="StopButton_Clicked"
                    IsEnabled="False"
                    BackgroundColor="OrangeRed"/>
            <Button x:Name="ClearButton"
                    Text="Clear Chat"
                    Clicked="ClearButton_Clicked"
                    IsEnabled="False"
                    BackgroundColor="LightSlateGray"/>
            <Label x:Name="StatusLabel"
                   Text="Status: Not initialized."
                   FontSize="Small"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>